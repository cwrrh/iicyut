.post
  .title
    font-size: 1.25rem;
    margin-bottom: .3125rem;
    line-height: 1.25rem;
    color: #000000;
    font-weight: 400;
  
  .meta
    margin-bottom: 2.0625rem;

    .dates
      color: #BBBBBB;
      font-size: .8125rem;
    
  .content
    p
      font-size: .875rem;
      line-height: 1.25rem;
      color: #494949;

    for row in 1 2 3 4 5 6
      h{row}
        font-size: ((22 - row * 2) / 16)rem;
        font-weight: 400;

// 第二种布局方案
// title和meta居中， 文章段落indent 2em